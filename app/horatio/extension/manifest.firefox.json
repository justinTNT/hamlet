{
    "manifest_version": 3,
    "name": "Horatio Writer",
    "version": "0.1.0",
    "description": "Curate content for your Horatio Microblog.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "scripts": ["src/background.js"],
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "horatio@example.com"
        }
    }
}
