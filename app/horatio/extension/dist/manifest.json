{
  "manifest_version": 3,
  "name": "Horatio Writer",
  "version": "0.1.0",
  "description": "Curate content for your Horatio Microblog.",
  "permissions": [
    "activeTab",
    "scripting",
    "declarativeContent"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
