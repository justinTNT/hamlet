{
    "name": "buildamp-app",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "generate": "buildamp gen --src shared --dest .",
        "dev:web": "cd web && vite",
        "dev:server": "cd server && node --watch server.js",
        "dev": "concurrently \"npm run dev:web\" \"npm run dev:server\"",
        "build": "npm run build --workspaces"
    },
    "devDependencies": {
        "buildamp": "^0.1.0",
        "concurrently": "^8.0.0"
    },
    "workspaces": [
        "web",
        "server",
        "admin"
    ]
}