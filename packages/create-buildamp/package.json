{
    "name": "create-buildamp",
    "version": "0.1.0",
    "description": "Scaffold a new BuildAmp project",
    "bin": {
        "create-buildamp": "./index.js"
    },
    "type": "module",
    "scripts": {
        "test": "node --test tests/*.test.js",
        "test:watch": "node --test --watch tests/*.test.js",
        "sync-shared": "cp -r ../../shared/generation/* template/.buildamp/generation/ && cp -r ../../shared/generation/* shared/generation/",
        "prepublishOnly": "npm run sync-shared",
        "prepack": "npm run sync-shared"
    },
    "keywords": [
        "buildamp",
        "cli",
        "scaffold",
        "generator"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "prompts": "^2.4.2",
        "kolorist": "^1.8.0"
    }
}