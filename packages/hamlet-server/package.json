{
  "name": "hamlet-server",
  "version": "0.1.0",
  "description": "Modular Node.js server framework for Hamlet applications",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./core": "./core/index.js",
    "./middleware": "./middleware/index.js"
  },
  "scripts": {
    "pretest": "node tests/generation/setup-test-files.js",
    "test": "npx --node-options='--experimental-vm-modules' jest",
    "test:core": "npx --node-options='--experimental-vm-modules' jest tests/core.test.js tests/database.test.js tests/middleware/ tests/security/",
    "test:generation": "node tests/generation/setup-test-files.js && npx --node-options='--experimental-vm-modules' jest tests/generation/",
    "test:watch": "npx --node-options='--experimental-vm-modules' jest --watch",
    "lint": "eslint ."
  },
  "jest": {
    "transform": {},
    "testEnvironment": "node"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "buildamp-contracts": "*"
  },
  "peerDependencies": {
    "pg": "^8.11.3",
    "proto-rust": "*",
    "vite": "^5.0.0",
    "vite-plugin-elm": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    },
    "proto-rust": {
      "optional": true
    },
    "vite": {
      "optional": true
    },
    "vite-plugin-elm": {
      "optional": true
    }
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "hamlet",
    "framework",
    "node",
    "express",
    "middleware"
  ],
  "author": "Hamlet Team",
  "license": "MIT"
}